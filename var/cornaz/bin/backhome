#! /bin/bash

# Test auf angelegte .forward-Dateien
if [ -n "`ls /var/cornaz/vacation/*.binda 2>/dev/null`" ]
then
	name=`ls /var/cornaz/vacation/*.binda 2>/dev/null | sed s/.binda//`  
	name=`basename $name`
	rm /home/$name/.forward
	rm /home/$name/.vacation.msg
	rm /var/cornaz/vacation/$name.binda
	rm /var/cornaz/vacation/$name.binweg
else 
	exit
fi
